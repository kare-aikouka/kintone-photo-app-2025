{
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "sass": "^1.77.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.25.5",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.38",
    "postcss-cli": "^10.0.0",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "scripts": {
    "build": "yarn build:css && yarn build:js",
    "build:css:compile": "yarn sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\""
  },
  "resolutions": {
    "open": "^8.4.0",
    "webpack-dev-middleware": "^6.0.0",
    "webpack-dev-server": "^4.0.0",
    "postcss-load-config": "^4.0.0",
    "postcss-cli": "^10.0.0"
  }
}
